<View title="后台类目额外信息">
    <!--持有数据的作用-->
<!--    key	数据容器在页面内的唯一标识，用于 related  关联-->
    <Record key="category" model="terminus_trantor_demo_BackendCategory" />
    <Tabs>
        <Tab title="类目属性">
<!--            advanced	高级表格类型（包含拖拽和表头工具栏）默认true-->
            <Table key="table" model="terminus_trantor_demo_Attribute" related="backendCategories:category" :advanced="false">
                <Fields>
                    <Field name="id" label="属性ID"/>
                    <Field name="key" label="属性名"/>
                </Fields>
            <Actions>
                <Action label="创建" openViewType="Dialog" action="terminus_trantor_demo_Attribute_toEdit"/>
<!--                <Action type="Submit" :show="this.record.id == null" action="terminus_trantor_demo_Attribute_create"/>-->
<!--                <Action type="Submit" :show="this.record.id != null" action="terminus_trantor_demo_Attribute_update"/>-->
            </Actions>
<!--                RecordActions 行级别操作; Actions 整个容器操作-->
                <RecordActions>
<!--                <Actions>-->
                    <Action label="查看" action="terminus_trantor_demo_Attribute_toDetail" />
                    <Action label="编辑" action="terminus_trantor_demo_Attribute_toEdit" />
                    <Action label="取消关联" after="Refresh" confirm="确定要取消?" action="terminus_trantor_demo_Attribute_delete"/>
                    <!--                </Actions>-->
                </RecordActions>
            </Table>
        </Tab>
        <Tab title="税率">
            <Form model="terminus_trantor_demo_CategoryExtra" related="backendCategory:category">
                <Fields>
                    <Field name="backendCategory" :readonly="true" />
                    <Field name="rateCode"/>
                    <Field name="rate"/>
                </Fields>
                <Actions>
                    <Action type="Submit" :show="this.record.id == null" action="terminus_trantor_demo_CategoryExtra_create"/>
                    <Action type="Submit" :show="this.record.id != null" action="terminus_trantor_demo_CategoryExtra_update"/>
                </Actions>
            </Form>
        </Tab>
        <Tab title="售后服务">
            <!-- related：所有 terminus_trantor_demo_CategoryExtra 模型的 BackendCategory 属性对应 key=category -->
            <Form model="terminus_trantor_demo_CategoryExtra" related="backendCategory:category">
                <Fields>
                    <Field name="backendCategory" :readonly="true" />
                    <Field name="serviceTitle"/>
                    <Field name="serviceContent"/>
                </Fields>
                <Actions>
                    <Action type="Submit" :show="this.record.id == null" action="terminus_trantor_demo_CategoryExtra_create"/>
                    <Action type="Submit" :show="this.record.id != null" action="terminus_trantor_demo_CategoryExtra_update"/>
                </Actions>
            </Form>
        </Tab>
    </Tabs>
</View>